@model RecompensasResponse

<div class="row">
    <div class="col">
        <h4 class="font-weight-bolder">Recompensas pensadas en ti - Parte 2</h4>
    </div>

    @{

        int iNumCol = 1;
    }
    
    <div class="row " style="padding:5px;margin:5px;">
        @foreach (var r in Model.data)
        {
            <div style="height:auto;width:100%;display:flex;align-items:center;justify-content:center;flex-direction:column">
                 <ReworthDirectory accentColor={'#2E58FF'}
                                  lang={'ES'}
                                  fontFamily={'Poppins'} />                
                <div class="row" style="height:70px">
                    <div class="col align-self-end align-content-end " style="width:60%; height:90%">
                        <figure class="figure align-self-end align-content-end " style="height:90%">
                            <img class="align-content-end align-self-end border rounded-circle" src="@r.media"
                                 style="width: 60px; height: 90%; align-self:end" />
                        </figure>
                    </div>
                    <div class="col text-right align-content-end align-self-end " style="width:20%">
                        <span class="bg-primary text-white align-content-end align-self-end" style="font-size:9px;">
                            @r.dv_cashback CASHBACK
                        </span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-auto text-left" style="width:80%">
                        <span class="font-weight-bold font-weight-bold" style="font-size:11px;">
                            @r.name
                        </span>
                    </div>
                    <div class="col text-right font-weight-bold align-content-end align-self-end" style="width:20%;font-size:9px">
                        <span class="font-weight-bold " style="font-size:9px;">
                            $<i class="fas fa-dot-circle align-content-center" style="color:black;font-size:6px"></i>
                            <i class="fas fa-star" style="color:orange"></i>
                            @r.rating
                        </span>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <span class="font-weight-light text-primary font-weight-bolder" style="font-size:10px">
                            @r.dv_category
                        </span>
                    </div>
                </div>
                <div class="row">
                    <br />
                    <div class="col">
                        <span class="font-weight-light text-dark font-weight-bolder" style="font-size:10px">
                            Recompensa @r.quickType
                        </span>
                        <hr style="height:1px; background-color:lightgray" />
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <i class="fas fa-location-arrow" style="color:dodgerblue"></i>
                        <a href="@Url.Action("Location", "Home", new { name=r.name})"
                           class="font-weight-light text-primary font-weight-bolder alert-link" style="font-size:11px;">
                            Locación
                        </a>
                    </div>
                    <div class="col text-right">
                        <i class="fas fa-link" style="color:dodgerblue"></i>
                        <a href="@Url.Action("Mas", "Home", new { name=r.name})"
                           class="font-weight-light text-primary font-weight-bolder alert-link text-right"
                           style="font-size:11px">
                            Conoce más
                        </a>
                    </div>
                </div>
            </div>

            if (iNumCol == 3)
            {
                <div class="w-100"></div>
                iNumCol = 0;
            }

            iNumCol++;
        }
    </div>







