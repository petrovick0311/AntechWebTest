@model CocktailDB
@{


}
<nav class="navbar navbar-expand-lg" style="background-color:antiquewhite;">
    <div class="container-fluid">
        <a class="navbar-brand">Bebidas Favoritas de Usuario Guess </a>
        <a class="btn btn-outline-primary align-content-end justify-content-end" style="width:200px" onClick="history.back();">
            Regresar
        </a>
    </div>
</nav>
<br />
<div class="row">
    @foreach (var r in Model.ldrinks)
    {
        <div class="col-md-3">
            <a href="@Url.Action("CocktailDetail", "Home", new { Id=r.IdDrink})"
               class="font-weight-light text-primary font-weight-bolder alert-link" style="font-size:11px;">

                <figure class="figure align-self-end align-content-end">
                    <img class="align-content-end align-self-end img-fluid" src="@r.strDrinkThumb"
                         style="width: 220px; height: 220px; align-self:end" />
                </figure>
            </a>
            <p>
                <a class="btn btn-outline-info align-content-md-center" style="width:180px"
                   href="@Url.Action("CocktailDetail", "Home", new { Id=r.IdDrink})">
                    @r.strDrink
                </a>
                <a class="text-center btn btn-outline-info border-0 justify-content-center" style="width:40px"
                   href="@Url.Action("DeleteFavourite", "Home", new { Id=r.IdDrink})">
                    <i class="fas fa-sharp fa-solid fa-trash text-center justify-content-center" style="color:dodgerblue"></i>
                </a>
            </p>
    </div>
}
</div>
